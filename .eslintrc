globals:
  MathJax: false
  angular: false
  _: false
  require: false
rules:
  indent:
    - 2
    - 2
    - indentSwitchCase: true
  quotes:
    - 2
    - single
  linebreak-style:
    - 2
    - unix
  semi:
    - 2
    - always
  comma-spacing:
    - 0
  no-var:
    - 2
  prefer-const:
    - 1
  no-underscore-dangle:
    - 0
env:
  es6: true
  browser: true
ecmaFeatures:
  modules: true
